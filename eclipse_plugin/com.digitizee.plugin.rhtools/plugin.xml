<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="RHTCategory"
            id="com.digitizee.plugin.rhtools.rhtoolsCommand.category">
      </category>
      <command
            name="Run"
            categoryId="com.digitizee.plugin.rhtools.rhtoolsCommand.category"
            id="com.digitizee.plugin.rhtools.commands.rhtoolsRunCommand">
      </command>
      <command
            categoryId="com.digitizee.plugin.rhtools.rhtoolsCommand.category"
            id="com.digitizee.plugin.rhtools.commands.rhtoolsConfigCommand"
            name="Configuration">
      </command>
      <command
            categoryId="com.digitizee.plugin.rhtools.rhtoolsCommand.category"
            id="com.digitizee.plugin.rhtools.commands.rhtoolsAboutCommand"
            name="About">
      </command>
      <command
            categoryId="com.digitizee.plugin.rhtools.rhtoolsCommand.category"
            id="com.digitizee.plugin.rhtools.commands.rhtoolsExecNowCommand"
            name="exec_now">
      </command>
      <command
            categoryId="com.digitizee.plugin.rhtools.rhtoolsCommand.category"
            id="com.digitizee.plugin.rhtools.commands.rhtoolsKillNowCommand"
            name="kill_now">
      </command>
      <command
            categoryId="com.digitizee.plugin.rhtools.rhtoolsCommand.category"
            id="com.digitizee.plugin.rhtools.commands.rhtoolsRebootNowCommand"
            name="RebootNow">
      </command>
      <command
            categoryId="com.digitizee.plugin.rhtools.rhtoolsCommand.category"
            id="com.digitizee.plugin.rhtools.commands.rhtoolsCopyNowCommand"
            name="CopyNow">
      </command>
      <command
            categoryId="com.digitizee.plugin.rhtools.rhtoolsCommand.category"
            id="com.digitizee.plugin.rhtools.commands.rhtoolsShutdownNowCommand"
            name="ShutdownNow">
      </command>
      <command
            categoryId="com.digitizee.plugin.rhtools.rhtoolsCommand.category"
            id="com.digitizee.plugin.rhtools.commands.rhtoolsCustomNowCommand"
            name="CustomNow">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="com.digitizee.plugin.rhtools.commands.rhtoolsRunCommand"
            class="com.digitizee.plugin.rhtools.handlers.RunHandler">
      </handler>
      <handler
            class="com.digitizee.plugin.rhtools.handlers.ConfigHandler"
            commandId="com.digitizee.plugin.rhtools.commands.rhtoolsConfigCommand">
      </handler>
      <handler
            class="com.digitizee.plugin.rhtools.handlers.AboutHandler"
            commandId="com.digitizee.plugin.rhtools.commands.rhtoolsAboutCommand">
      </handler>
      <handler
            class="com.digitizee.plugin.rhtools.handlers.CopyNowHandler"
            commandId="com.digitizee.plugin.rhtools.commands.rhtoolsCopyNowCommand">
      </handler>
      <handler
            class="com.digitizee.plugin.rhtools.handlers.ExecNowHandler"
            commandId="com.digitizee.plugin.rhtools.commands.rhtoolsExecNowCommand">
      </handler>
      <handler
            class="com.digitizee.plugin.rhtools.handlers.KillNowHandler"
            commandId="com.digitizee.plugin.rhtools.commands.rhtoolsKillNowCommand">
      </handler>
      <handler
            class="com.digitizee.plugin.rhtools.handlers.ShutdownNowHandler"
            commandId="com.digitizee.plugin.rhtools.commands.rhtoolsShutdownNowCommand">
      </handler>
      <handler
            class="com.digitizee.plugin.rhtools.handlers.RebootNowHandler"
            commandId="com.digitizee.plugin.rhtools.commands.rhtoolsRebootNowCommand">
      </handler>
      <handler
            class="com.digitizee.plugin.rhtools.handlers.CustomNowHandler"
            commandId="com.digitizee.plugin.rhtools.commands.rhtoolsCustomNowCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.digitizee.plugin.rhtools.commands.rhtoolsRunCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="com.digitizee.plugin.rhtools.commands.rhtoolsConfigCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+7">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="com.digitizee.plugin.rhtools.menus.rhtools"
               label="RHTools"
               mnemonic="M">
            <command
                  commandId="com.digitizee.plugin.rhtools.commands.rhtoolsRunCommand"
                  icon="icons/run_small.png"
                  id="com.digitizee.plugin.rhtools.menus.rhtoolsCommand"
                  label="Run..."
                  mnemonic="S">
            </command>
            <command
                  commandId="com.digitizee.plugin.rhtools.commands.rhtoolsConfigCommand"
                  icon="icons/config_small.png"
                  id="com.digitizee.plugin.rhtools.menus.rhtoolsCommand"
                  label="Configurations"
                  mnemonic="S">
            </command>
            <separator
       			name="separator-id"
       			visible="true">
			</separator>
            <command
                  commandId="com.digitizee.plugin.rhtools.commands.rhtoolsCopyNowCommand"
                  id="com.digitizee.plugin.rhtools.menus.rhtoolsCommand"
                  label="Copy Binary"
                  mnemonic="S">
            </command>
            <command
                  commandId="com.digitizee.plugin.rhtools.commands.rhtoolsExecNowCommand"
                  id="com.digitizee.plugin.rhtools.menus.rhtoolsCommand"
                  label="Exec Binary"
                  mnemonic="S">
            </command>
            <command
                  commandId="com.digitizee.plugin.rhtools.commands.rhtoolsKillNowCommand"
                  id="com.digitizee.plugin.rhtools.menus.rhtoolsCommand"
                  label="Kill Binary"
                  mnemonic="S">
            </command>
            <command
                  commandId="com.digitizee.plugin.rhtools.commands.rhtoolsCustomNowCommand"
                  id="com.digitizee.plugin.rhtools.menus.rhtoolsCommand"
                  label="Custom Command"
                  mnemonic="S">
            </command>
            <separator
                  name="separator-id2"
                  visible="true">
            </separator>
            <command
                  commandId="com.digitizee.plugin.rhtools.commands.rhtoolsShutdownNowCommand"
                  id="com.digitizee.plugin.rhtools.menus.rhtoolsCommand"
                  label="Shutdown Device"
                  mnemonic="S">
            </command>
            <command
                  commandId="com.digitizee.plugin.rhtools.commands.rhtoolsRebootNowCommand"
                  id="com.digitizee.plugin.rhtools.menus.rhtoolsCommand"
                  label="Reboot Device"
                  mnemonic="S">
            </command>
            <separator
                  name="separator-id3"
                  visible="true">
            </separator>
             <command
                  commandId="com.digitizee.plugin.rhtools.commands.rhtoolsAboutCommand"
                  icon="icons/info_small.png"
                  id="com.digitizee.plugin.rhtools.menus.rhtoolsCommand"
                  label="About"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="com.digitizee.plugin.rhtools.toolbars.rhtoolsToolbar">
            <command
                  commandId="com.digitizee.plugin.rhtools.commands.rhtoolsRunCommand"
                  icon="icons/run_small.png"
                  tooltip="RHTools *RUN"
                  id="com.digitizee.plugin.rhtools.toolbars.run">
            </command>
            <command
                  commandId="com.digitizee.plugin.rhtools.commands.rhtoolsConfigCommand"
                  icon="icons/config_small.png"
                  id="com.digitizee.plugin.rhtools.toolbars.config"
                  tooltip="RHTools *CONFIG">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
